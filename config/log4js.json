{
  "appenders": {
    "everything": {
      "type": "file",
      "filename": "all-the-logs.log",
      "maxLogSize": 10485760,
      "backups": 3,
      "compress": true
    },
    "access": {
      "type": "dateFile",
      "filename": "log/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "log/app.log"
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    },
    "console": {
      "type": "console"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "app",
        "console",
        "errors",
        "everything"
      ],
      "level": "ALL"
    },
    "http": {
      "appenders": [
        "access"
      ],
      "level": "DEBUG"
    }
  }
}