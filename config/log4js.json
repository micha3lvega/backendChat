{
    "appenders": {
        "everything": {
            "type": "file",
            "filename": "../log/backendChat/server.log",
            "maxLogSize": "1k",
            "backups": 3,
            "compress": true
        },
        "console": {
            "type": "console"
        },
        "app": {
            "type": "file",
            "filename": "../log/backendChat/server.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "errorFile": {
            "type": "file",
            "filename": "../log/backendChat/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "app",
                "errors",
                "console",
                "everything"
            ],
            "level": "ALL"
        }
    }
}